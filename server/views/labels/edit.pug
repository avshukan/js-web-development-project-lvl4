extends ../layouts/application.pug

block header
  = t('views.labels.edit.header')

block content
  +formFor()(action=route('update label', { id: label.id }) method='post')
    input(name='_method' type='hidden' value='patch')
    +input(label, 'name', t('views.labels.labels.name'), errors)(type="text")
    +submit(label)(value=t('views.labels.edit.submit'))
