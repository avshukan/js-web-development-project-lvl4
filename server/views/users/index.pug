extends ../layouts/application.pug

block content
  table.table.table-striped
    thead
      tr
        th= t('views.users.id')
        th= t('views.users.email')
        th= t('views.users.createdAt')
    tbody
      each user in users
        tr
          td= user.id
          td= user.email
          td= formatDate(user.createdAt)
          td
            //- +buttonTo(route('users/' + user.id), 'delete')(class="btn nav-link" value=t('views.users.list.delete'))
            //- a(href='users/' + user.id + '/edit' class="btn nav-link")= t('views.users.edit'))
            a(href='users/' + user.id + '/edit' class="btn nav-link")= t('views.users.update')
          td
            //- +buttonTo(route('users/' + user.id), 'delete')(class="btn nav-link" value=t('views.users.list.delete'))
            +buttonTo('users/' + user.id, 'delete')(class="btn nav-link" value=t('views.users.delete'))