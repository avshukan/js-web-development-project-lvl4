extends ../layouts/application.pug

block header
  = t('views.statuses.edit.header')

block content
  +formFor()(action=route('update status', { id: status.id }) method='post')
    input(name='_method' type='hidden' value='patch')
    +input(status, 'name', t('views.statuses.edit.labels.name'), errors)(type="text")
    +submit(status)(value=t('views.statuses.edit.submit'))
