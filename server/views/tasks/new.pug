extends ../layouts/application.pug

block header
  = t('views.tasks.new.header')

block content
  +formFor()(action=route('create task') method='post')
    +input(task, 'name', t('views.tasks.labels.name'), errors)(type="text")
    +input(task, 'description', t('views.tasks.labels.description'), errors)(type="text")
    +select(task, 'statusId', t('views.tasks.labels.statusId'), statuses, false, errors) 
    +select(task, 'executorId', t('views.tasks.labels.executorId'), users, true, errors) 
    +submit(task)(value=t('views.tasks.new.submit'))
